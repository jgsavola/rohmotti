<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <link rel="stylesheet" type="text/css" media="all" href="${APP_ROOT_URI}/src/styles/default.css" />

    <title>${nimi}</title>
  </head>
  <body>
    ${navigation}

    <h1>${nimi}</h1>

    ${status}

    <div class="kohdeinfo"><div class="kohdeinfofloat">${kohdeinfo}</div></div>

    <div class="ruokaaineetlista">${ruokaaineetlista}</div>

    <div class="commentform">
      <form class="cmxform" action="${FULL_PATH}/ruokaaine" method="post" enctype="multipart/form-data">
	<fieldset>
	  <legend>Lisää ruoka-aine:</legend>
	  <ol>
	    <li>
	      <label for="ruokaaine_id">Ruoka-aine</label>
	      <select name="ruokaaine_id" id="ruokaaine_id">
		${ruokaaine_optiot}
	      </select>
	    </li>
	    <li>
	      <label for="maara">Määrä</label>
	      <input type="text" name="maara" id="maara" />
	    </li>
	    <li>
	      <label for="mittayksikko">Mittayksikko</label>
	      <select name="mittayksikko" id="mittayksikko">
		${mittayksikko_optiot}
	      </select>
	    </li>
	    <li>
	      <input type="submit" value="Lähetä!" />
	    </li>
	    <input type="hidden" name="action" value="add" />
	  </ol>
	</fieldset>
      </form>
    </div>

    <p><strong>Valmistusohje:</strong></p>
    ${valmistusohje}

    <form action="${REQUEST_URI}">
      <input type="submit" name="mode" value="edit" />
    </form>

    ${kuva}

    <div class="commentform">
      <form class="cmxform" action="${FULL_PATH}/kommentti" method="post" enctype="multipart/form-data">
	<fieldset>
	  <legend>Lataa kuva:</legend>
	  <ol>
	    <li>
	      <label for="kuva">Kuva</label>
	      <input type="file" name="kuva" id="kuva" />
	    </li>
	    <li>
	      <label for="teksti">Teksti</label>
	      <textarea rows="6" cols="60" name="teksti" id="teksti"></textarea>
	    </li>
	    <li>
	      <input type="submit" value="Lähetä!" />
	    </li>
	    <input type="hidden" name="action" value="upload" />
	  </ol>
	</fieldset>
      </form>
    </div>

  </body>
</html>

