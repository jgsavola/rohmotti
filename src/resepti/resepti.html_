<html xmlns="http://www.w3.org/1999/xhtml">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="stylesheet" type="text/css" media="all" href="${APP_ROOT_URI}/src/styles/default.css" />

    <title>Reseptit</title>
  </head>
  <body>
    <div class="navigation">${navigation}</div>

    <h1>Reseptit</h1>

    ${status}

    ${reseptilista}

    <p>Lisää resepti</p>
    <form action="${REQUEST_URI}" method="post">
      <fieldset>
	<legend>Anna nimi:</legend>
	<input type="text" name="nimi" />
      </fieldset>
    </form>

    <form action="${REQUEST_URI}" method="post">
      <fieldset>
	<legend>Poista resepti</legend>
	<label for="id">ID:</label>
	<input type="text" name="id" id="id" /><br>
	<input type="hidden" name="method_override" value="DELETE" />
	<input type="submit" value="submit" />
      </fieldset>
    </form>
  </body>
</html>
